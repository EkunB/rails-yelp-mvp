<h1 class="mb-md-5">Add your review for <%= @restaurant.name %></h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>

  <%= f.button :submit %>
<% end %>

<div class="mt-md-4">
  <%= link_to "Back to restaurants' list", restaurants_path, class:"btn btn-primary" %>
</div>
